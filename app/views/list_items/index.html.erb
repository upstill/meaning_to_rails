<p id="notice"><%= notice %></p>

<h1>List Items</h1>
<form class="select_list_item" id="select_list_item" action="/list_items">
  Show items from list:
  <select name="list_type_id" onchange="this.form.submit()">
    <option value>all items</option>
    <%= options_from_collection_for_select(ListType.all, "id", "title", @list_type.try(:id)) %>
  </select>
</form>
<br>
<table class="list_items">
  <thead>
    <tr>
      <th>List</th>
      <th>Title</th>
      <th>Link</th>
      <th>Description</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @list_items.each do |list_item| %>
      <tr>
        <td><%= list_item.list_type.title %></td>
        <td><strong><%= list_item.title %></strong></td>
        <td><%= list_item.link %></td>
        <td><%= list_item.description %></td>
        <td><%= item_status list_item %></td>
        <td><%= link_to 'Show', list_item %></td>
        <td><%= link_to 'Edit', edit_list_item_path(list_item) %></td>
        <td><%= link_to 'Destroy', list_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New List Item', new_list_item_path %>
