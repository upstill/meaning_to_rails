<p id="notice"><%= notice %></p>

<%# content_tag :h2, @list_type.title if @list_type %>
<table class="table table-striped">
  <tbody>
  <% @list_items.each do |list_item| %>
    <tr>
      <td>
        <h3><strong><%= list_item.title %></strong></h3>
        <% if list_item.description.present? %>
          &nbsp;&nbsp;<%= list_item.description %><br>
        <% end %>
        &nbsp;&nbsp;<%= list_item.link %>
      </td>
      <td><%= item_status list_item %></td>
      <td>
        <%= link_to 'Show', list_item %>
        <br><%= link_to 'Edit', edit_list_item_path(list_item) %>
        <br><%= link_to 'Destroy', list_item, method: :delete, data: {confirm: 'Are you sure?'} %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<a class="btn btn-primary" style="font-size:1.5em" href="<%= new_list_item_path(list_type_id: @list_type.id) %>" role="button">New List Item</a>
<hr><br>
  <% if current_user.import_type == @list_type && current_user.imports.present? %>
    <h1>Items ready for import</h1>
    <table class="table table-striped">
      <tbody>
      <% current_user.imports.each do |item_to_import| %>
        <tr>
          <td>
            <h3><strong><%= item_to_import.title %></strong></h3>
            <% if item_to_import.description.present? %>
              &nbsp;&nbsp;<%= item_to_import.description %><br>
            <% end %>
            &nbsp;&nbsp;<%= item_to_import.link %>
          </td>
          <td><%= render "item_button", item_to_import: item_to_import %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <%= button_to 'Accept All', clear_imports_path(id: current_user.id, accept: true), { form: { style: 'display:inline-block;' }, method: 'POST', class: 'btn btn-success', style: "font-size:1.5em" } %>
    &nbsp;&nbsp;<%= button_to 'Clear', clear_imports_path(id: current_user.id, accept: true), { form: { style: 'display:inline-block;' }, method: 'POST', class: 'btn btn-danger', style: "font-size:1.5em" } %>
  <% else %>
    <h4> To import list items from your computer, click 'Choose File' then 'Import Items'</h4>
    <%= form_for current_user do |f| %>
      <%= f.file_field :import %>
      <%= f.submit 'Import Items' %>
    <% end %>
  <% end %>
