<p id="notice"><%= notice %></p>

<h1>List Types</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Noun</th>
      <th>Verb</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @list_types.each do |list_type| %>
      <tr>
        <td><%= list_type.title %></td>
        <td><%= list_type.noun %></td>
        <td><%= list_type.verb %></td>
        <td><%= link_to 'Show', list_type %></td>
        <td><%= link_to 'Edit', edit_list_type_path(list_type) %></td>
        <td><%= link_to 'Destroy', list_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

